<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoA"
        android:id="@+id/textoA"
        android:textColor="#9A1414"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textob"
        android:id="@+id/textoB"
        android:textColor="#9A1414"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@id/textoA"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textoc"
        android:id="@+id/textoC"
        android:textColor="#9A1414"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_toRightOf="@id/textoB"
        />

</RelativeLayout>